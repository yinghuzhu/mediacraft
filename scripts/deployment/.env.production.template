# MediaCraft 生产环境配置模板
# 此文件在部署时会被复制并根据实际路径进行替换

# Flask 配置
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=GENERATE_SECURE_SECRET_KEY_HERE

# 服务器配置
HOST=127.0.0.1
PORT=50001

# 数据目录配置（将被部署脚本替换为实际路径）
DATA_DIR=DATA_DIR_PLACEHOLDER
TEMP_DIR=DATA_DIR_PLACEHOLDER/temp
UPLOAD_DIR=DATA_DIR_PLACEHOLDER/uploads
RESULTS_DIR=DATA_DIR_PLACEHOLDER/results
STORAGE_DIR=DATA_DIR_PLACEHOLDER/storage

# 任务队列配置
MAX_CONCURRENT_TASKS=5
MAX_QUEUE_SIZE=100
TASK_RETENTION_DAYS=30

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=DATA_DIR_PLACEHOLDER/logs/app.log

# 生产环境特定配置
ENABLE_CORS=true
ENABLE_DEBUG_TOOLBAR=false

# 安全配置
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# 性能配置
MAX_CONTENT_LENGTH=524288000  # 500MB
UPLOAD_TIMEOUT=300
PROCESSING_TIMEOUT=1800

# 监控配置
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=60